<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ===== PERMISOS RECOMENDADOS PARA MAPA/GEOLOCALIZACIÓN ===== -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Ubicación en primer plano (precisa y aproximada) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Solo si vas a usar servicios en primer plano (no es obligatorio para este módulo) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- (Opcional) Declarar que el dispositivo puede NO tener GPS físico -->
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <application
        android:label="ElectroMec SOS"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="false">

        <!-- ===== CLAVE DE GOOGLE MAPS ANDROID =====
             Necesario para mostrar GoogleMap (google_maps_flutter).
             Sustituye el valor por tu API Key válida. -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="TU_API_KEY_DE_GOOGLE_MAPS" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Tema mientras Flutter inicializa -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- No borrar: usado por Flutter -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- ===== QUERIES (PACKAGE VISIBILITY, ANDROID 11+) =====
         Permiten que tu app consulte si existen apps para ciertas intenciones.
         Útil para abrir Google Maps o un navegador vía url_launcher. -->
    <queries>
        <!-- Procesar texto (usado por Flutter internamente) -->
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>

        <!-- Intención de navegación/mapas -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="geo" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="google.navigation" />
        </intent>

        <!-- Abrir enlaces http/https (url_launcher) -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="http" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
    </queries>

</manifest>
